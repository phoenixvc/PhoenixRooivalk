rules_version = '2';

/**
 * Firestore Security Rules for Phoenix Rooivalk Documentation
 *
 * Collections:
 * - userProgress: User's reading progress and achievements (user-owned)
 * - userProfiles: User profile data with roles and settings (user-owned)
 * - analytics_pageviews: Page view events (write-only, admin-read)
 * - analytics_timeonpage: Time on page events (write-only, admin-read)
 * - analytics_conversions: Conversion funnel events (write-only, admin-read)
 * - analytics_sessions: Session data (write-only, admin-read)
 * - analytics_daily: Daily aggregated stats (write-only, admin-read)
 *
 * AI Collections (managed by Cloud Functions):
 * - ai_rate_limits: Rate limiting for AI features (function-managed)
 * - ai_usage: AI feature usage tracking (function-managed)
 * - document_improvements: User-submitted improvement suggestions
 * - documentation_meta: Document metadata for recommendations
 * - notifications: User notifications
 *
 * RAG Collections (managed by Cloud Functions):
 * - doc_embeddings: Document chunks with vector embeddings for semantic search
 * - doc_metadata: Document-level metadata for RAG indexing
 *
 * Build-Time Indexing Collections (managed by Cloud Functions):
 * - build_index_status: Build indexing status and progress
 *
 * Cache Collections (managed by Cloud Functions):
 * - cache_embeddings: Cached embedding vectors
 * - cache_queries: Cached query results
 * - cache_suggestions: Cached suggested questions
 *
 * Monitoring Collections (managed by Cloud Functions):
 * - ai_metrics: Individual request metrics
 * - ai_daily_stats: Daily aggregated AI stats
 * - ai_errors: Error logs
 * - ai_alerts: Alert notifications
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    // Configure admin UIDs in your Firebase project settings or use custom claims
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.token.email.matches('.*@phoenixrooivalk\\.com$') ||
        request.auth.token.email.matches('.*@justaghost\\.dev$')
      );
    }

    // Valid role values that users can have
    function isValidRole(role) {
      return role == 'reader' || 
             role == 'contributor' || 
             role == 'reviewer' || 
             role == 'admin';
    }

    // Validate all roles in a list are valid strings and allowed values
    // Note: Firestore rules don't support loops, so we check each index
    function hasValidRoles(roles) {
      return roles is list &&
        roles.size() <= 4 &&
        (roles.size() == 0 || 
         (roles[0] is string && isValidRole(roles[0]))) &&
        (roles.size() <= 1 || 
         (roles[1] is string && isValidRole(roles[1]))) &&
        (roles.size() <= 2 || 
         (roles[2] is string && isValidRole(roles[2]))) &&
        (roles.size() <= 3 || 
         (roles[3] is string && isValidRole(roles[3])));
    }

    // User progress - users can only read/write their own data
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if isAdmin(); // Admins can read all progress for support
    }

    // User profiles - users can only read/write their own profile
    // Validates required fields and restricts access to own profile only
    match /userProfiles/{userId} {
      // Only allow authenticated users to read/write their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      allow read: if isAdmin(); // Admins can read profiles for support
      
      // Write rules with field validation for minimal PII exposure
      allow create: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.data.keys().hasAll(['firstName', 'lastName', 'profileKey', 'roles']) &&
        request.resource.data.firstName is string &&
        request.resource.data.lastName is string &&
        request.resource.data.profileKey is string &&
        hasValidRoles(request.resource.data.roles) &&
        // Ensure timestamp fields are set by server, not user
        (!request.resource.data.keys().hasAny(['createdAt', 'updatedAt']) ||
         (request.resource.data.createdAt == request.time && 
          request.resource.data.updatedAt == request.time));
      
      allow update: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.data.firstName is string &&
        request.resource.data.lastName is string &&
        // Prevent modification of security-sensitive fields
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['roles', 'profileKey']) &&
        // Ensure updatedAt is not set by client
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['updatedAt']);
      
      allow delete: if false; // Profiles should not be deleted, only deactivated
    }

    // Analytics collections - anyone can write (for tracking), only admins can read
    match /analytics_pageviews/{document=**} {
      allow create: if true; // Allow anonymous tracking
      allow read: if isAdmin();
      allow update, delete: if false; // Immutable
    }

    match /analytics_timeonpage/{document=**} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    match /analytics_conversions/{document=**} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    match /analytics_sessions/{sessionId} {
      allow create: if true;
      allow update: if true; // Sessions need to be updated with page counts
      allow read: if isAdmin();
      allow delete: if false;
    }

    match /analytics_daily/{date} {
      allow create: if true;
      allow update: if true; // Daily stats are incremented
      allow read: if isAdmin();
      allow delete: if false;
    }

    // AI Collections - managed primarily by Cloud Functions
    // Rate limits - only Cloud Functions can read/write (via admin SDK)
    match /ai_rate_limits/{document=**} {
      allow read, write: if false; // Function-only via admin SDK
    }

    // AI usage tracking - only Cloud Functions can write
    match /ai_usage/{document=**} {
      allow read: if isAdmin();
      allow write: if false; // Function-only via admin SDK
    }

    // Document improvements - users submit, admins review
    match /document_improvements/{improvementId} {
      // Users can read their own submissions
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      // Only functions can create (via admin SDK)
      allow create, update, delete: if false;
    }

    // Documentation metadata - for AI recommendations
    match /documentation_meta/{docId} {
      allow read: if request.auth != null; // Any authenticated user can read
      allow write: if isAdmin(); // Only admins can update metadata
    }

    // RAG Collections - Document embeddings and metadata
    // doc_embeddings: Stores document chunks with vector embeddings
    match /doc_embeddings/{chunkId} {
      allow read: if request.auth != null; // Authenticated users can search
      allow write: if false; // Function-only via admin SDK (indexing)
    }

    // doc_metadata: Stores document-level metadata for RAG
    match /doc_metadata/{docId} {
      allow read: if request.auth != null; // Authenticated users can read metadata
      allow write: if false; // Function-only via admin SDK (indexing)
    }

    // Build-Time Indexing Collections
    // build_index_status: Tracks build indexing progress and status
    match /build_index_status/{buildId} {
      allow read: if isAdmin(); // Only admins can view build status
      allow write: if false; // Function-only via admin SDK
    }

    // Cache Collections - managed by Cloud Functions
    match /cache_embeddings/{document=**} {
      allow read, write: if false; // Function-only via admin SDK
    }

    match /cache_queries/{document=**} {
      allow read, write: if false; // Function-only via admin SDK
    }

    match /cache_suggestions/{document=**} {
      allow read, write: if false; // Function-only via admin SDK
    }

    // Monitoring Collections - managed by Cloud Functions
    match /ai_metrics/{document=**} {
      allow read: if isAdmin(); // Admins can view metrics
      allow write: if false; // Function-only via admin SDK
    }

    match /ai_daily_stats/{document=**} {
      allow read: if isAdmin(); // Admins can view daily stats
      allow write: if false; // Function-only via admin SDK
    }

    match /ai_errors/{document=**} {
      allow read: if isAdmin(); // Admins can view errors
      allow write: if false; // Function-only via admin SDK
    }

    match /ai_alerts/{document=**} {
      allow read: if isAdmin(); // Admins can view alerts
      allow write: if false; // Function-only via admin SDK
    }

    // User notifications
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Users can mark their own notifications as read
      allow update: if request.auth != null &&
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      allow create, delete: if false; // Function-only via admin SDK
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
