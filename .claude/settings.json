      "Bash(pnpm install)",
      "Bash(pnpm build)",
      "Bash(pnpm build:*)",
      "Bash(pnpm dev)",
      "Bash(pnpm test)",
      "Bash(pnpm test:*)",
      "Bash(pnpm lint)",
      "Bash(pnpm lint:*)",
