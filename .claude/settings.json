      "Bash(cargo clippy*)",
      "Bash(cargo fmt*)",
      "Bash(cargo check*)",
      "Bash(cargo run*)",
      "Bash(pytest *)",
      "Bash(npx *)",
      "Bash(gh *)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git add *)",
      "Bash(git commit*)",
      "Bash(git push*)",
      "Bash(git fetch*)",
